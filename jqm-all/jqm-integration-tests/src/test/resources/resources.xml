<?xml version="1.0" encoding="UTF-8"?>
<resources>
    <resource
        name="jdbc/hsqldb"
        auth="Container"
        type="javax.sql.DataSource"
        factory="org.apache.tomcat.jdbc.pool.DataSourceFactory"
        testWhileIdle="true"
        testOnBorrow="true"
        testOnReturn="false"
        validationQuery="SELECT 1 FROM INFORMATION_SCHEMA.SYSTEM_USERS"
        initSQL="SET TIME ZONE INTERVAL '0:00' HOUR TO MINUTE"
        validationInterval="1000"
        timeBetweenEvictionRunsMillis="30000"
        maxActive="100"
        minIdle="10"
        maxWait="10000"
        initialSize="10"
        removeAbandonedTimeout="3600"
        removeAbandoned="true"
        logAbandoned="true"
        minEvictableIdleTimeMillis="60000"
        jmxEnabled="true"
        username="SA"
        password=""
        url="jdbc:hsqldb:hsql://localhost/testdbengine"
        singleton="true" />

    <resource
        name="jdbc/postgresql"
        auth="Container"
        type="javax.sql.DataSource"
        factory="org.apache.tomcat.jdbc.pool.DataSourceFactory"
        testWhileIdle="true"
        testOnBorrow="true"
        testOnReturn="false"
        validationQuery="SELECT 1"
        validationInterval="1000"
        timeBetweenEvictionRunsMillis="1000"
        maxActive="80"
        maxIdle="40"
        minIdle="3"
        maxWait="10000"
        initialSize="5"
        removeAbandonedTimeout="3600"
        removeAbandoned="true"
        logAbandoned="true"
        minEvictableIdleTimeMillis="60000"
        jmxEnabled="true"
        username="jqm"
        password="jqm"
        url="jdbc:postgresql://localhost/jqm"
        singleton="true" />

    <resource
        name="jdbc/oracle"
        auth="Container"
        type="javax.sql.DataSource"
        factory="org.apache.tomcat.jdbc.pool.DataSourceFactory"
        testWhileIdle="true"
        testOnBorrow="true"
        testOnReturn="false"
        validationQuery="CALL DBMS_APPLICATION_INFO.SET_MODULE('CONNECTION POOL', 'IDLE IN POOL')"
        validationInterval="1000"
        timeBetweenEvictionRunsMillis="30000"
        maxActive="10"
        minIdle="1"
        maxIdle="4"
        maxWait="30000"
        initialSize="3"
        removeAbandonedTimeout="3600"
        removeAbandoned="true"
        logAbandoned="true"
        minEvictableIdleTimeMillis="60000"
        jmxEnabled="true"
        username="jqm"
        password="jqm"
        url="jdbc:oracle:thin:@localhost:1521/JQM.localdomain"
        connectionProperties="v$session.program=JQM;"
        singleton="true"
        initSQL="CALL DBMS_APPLICATION_INFO.SET_MODULE('CONNECTION POOL', 'IDLE IN POOL')"
        jdbcInterceptors="com.enioka.jqm.providers.Interceptor" />

    <resource
        name="jdbc/mysql"
        auth="Container"
        type="javax.sql.DataSource"
        factory="org.apache.tomcat.jdbc.pool.DataSourceFactory"
        testWhileIdle="true"
        testOnBorrow="true"
        testOnReturn="false"
        validationQuery="SELECT version()"
        validationInterval="5000"
        timeBetweenEvictionRunsMillis="60000"
        maxActive="80"
        maxIdle="10"
        minIdle="2"
        maxWait="30000"
        initialSize="5"
        removeAbandonedTimeout="3600"
        removeAbandoned="true"
        logAbandoned="true"
        minEvictableIdleTimeMillis="60000"
        jmxEnabled="true"
        username="jqm"
        password="jqm"
        url="jdbc:mysql://localhost:3306/jqm?useSSL=false&amp;allowPublicKeyRetrieval=true&amp;disableMariaDbDriver"
        singleton="true"
        connectionProperties="connectionAttributes=program_name:jqm;useLegacyDatetimeCode=false;serverTimezone=UTC;" />

    <resource
        name="jdbc/mariadb"
        auth="Container"
        type="javax.sql.DataSource"
        factory="org.apache.tomcat.jdbc.pool.DataSourceFactory"
        testWhileIdle="true"
        testOnBorrow="true"
        testOnReturn="false"
        validationQuery="SELECT version()"
        validationInterval="5000"
        timeBetweenEvictionRunsMillis="60000"
        maxActive="80"
        maxIdle="10"
        minIdle="2"
        maxWait="30000"
        initialSize="5"
        removeAbandonedTimeout="3600"
        removeAbandoned="true"
        logAbandoned="true"
        minEvictableIdleTimeMillis="60000"
        jmxEnabled="true"
        username="jqm"
        password="jqm"
        url="jdbc:mariadb://localhost:3306/jqm?useSSL=false"
        singleton="true"
        connectionProperties="connectionAttributes=program_name:jqm;useLegacyDatetimeCode=false;serverTimezone=UTC;" />

    <resource
        name="jdbc/db2"
        auth="Container"
        type="javax.sql.DataSource"
        factory="org.apache.tomcat.jdbc.pool.DataSourceFactory"
        testWhileIdle="true"
        testOnBorrow="true"
        testOnReturn="false"
        validationQuery="select 1 from sysibm.sysdummy1"
        validationInterval="5000"
        timeBetweenEvictionRunsMillis="60000"
        maxActive="80"
        maxIdle="10"
        minIdle="2"
        maxWait="30000"
        initialSize="5"
        removeAbandonedTimeout="3600"
        removeAbandoned="true"
        logAbandoned="true"
        minEvictableIdleTimeMillis="60000"
        jmxEnabled="true"
        username="jqm"
        password="jqm"
        url="jdbc:db2://localhost:50000/jqm"
        singleton="true"
        connectionProperties="defaultSchema=jqm" />
</resources>
