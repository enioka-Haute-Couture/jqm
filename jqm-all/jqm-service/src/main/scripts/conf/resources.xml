<?xml version="1.0" encoding="UTF-8"?>
<resources>
    <!-- HSQL configuration. This used a file, which is only suitable for single node deployments -->
    <resource
        name="jdbc/jqm"
        auth="Container"
        type="javax.sql.DataSource"
        factory="org.apache.tomcat.jdbc.pool.DataSourceFactory"
        testWhileIdle="true"
        testOnBorrow="false"
        testOnReturn="true"
        validationQuery="SELECT 1 FROM INFORMATION_SCHEMA.SYSTEM_USERS"
        initSQL="SET TIME ZONE INTERVAL '0:00' HOUR TO MINUTE"
        validationInterval="1000"
        timeBetweenEvictionRunsMillis="30000"
        maxActive="100"
        minIdle="10"
        maxWait="10000"
        initialSize="10"
        removeAbandonedTimeout="3600"
        removeAbandoned="true"
        logAbandoned="true"
        minEvictableIdleTimeMillis="60000"
        jmxEnabled="true"
        username="SA"
        password=""
        url="jdbc:hsqldb:file:db/jqmdatabase;shutdown=true;hsqldb.write_delay=false"
        singleton="true" />

