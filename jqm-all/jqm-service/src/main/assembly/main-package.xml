<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>main-package</id>
    <formats>
        <format>tar.gz</format>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>true</includeBaseDirectory>
    <baseDirectory>jqm-${project.version}</baseDirectory>
    <fileSets>
        <fileSet>
            <directory>${project.basedir}/..</directory>
            <outputDirectory></outputDirectory>
            <includes>
                <include>README*</include>
                <include>LICENSE*</include>
                <include>NOTICE*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/src/main/scripts</directory>
            <outputDirectory></outputDirectory>
            <includes>
                <include>jqm.sh</include>
                <include>*.ps1</include>
                <include>*.bat</include>
            </includes>
            <fileMode>0755</fileMode>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/src/main/scripts/conf</directory>
            <outputDirectory>conf</outputDirectory>
            <includes>
                <include>*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/src/main/scripts</directory>
            <outputDirectory>jobs/jqm-demo/xml</outputDirectory>
            <includes>
                <include>*.xml</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/lib/</directory>
            <outputDirectory>lib</outputDirectory>
            <includes>
                <include>*.xsd</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/src/main/scripts</directory>
            <outputDirectory>bin</outputDirectory>
            <includes>
                <include>*.exe</include>
                <include>permissions.sh</include>
            </includes>
            <fileMode>0755</fileMode>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/src/main/scripts/empty</directory>
            <outputDirectory>logs</outputDirectory>
            <excludes>
                <exclude>*</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/src/main/scripts/empty</directory>
            <outputDirectory>outputfiles</outputDirectory>
            <excludes>
                <exclude>*</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/src/main/scripts/empty</directory>
            <outputDirectory>tmp</outputDirectory>
            <excludes>
                <exclude>*</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/src/main/scripts/empty</directory>
            <outputDirectory>db</outputDirectory>
            <excludes>
                <exclude>*</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/src/main/scripts/empty</directory>
            <outputDirectory>jobs/jqm-demo/jqm-test-pyl-nodep/lib</outputDirectory>
            <excludes>
                <exclude>*</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/src/main/scripts/empty</directory>
            <outputDirectory>jobs/jqm-demo/jqm-test-pyl/lib</outputDirectory>
            <excludes>
                <exclude>*</exclude>
            </excludes>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>${project.build.directory}/${project.artifactId}-${project.version}.jar</source>
            <outputDirectory></outputDirectory>
            <destName>jqm.jar</destName>
        </file>
    </files>
    <dependencySets>
        <dependencySet>
            <outputDirectory>lib</outputDirectory>
            <useProjectArtifact>false</useProjectArtifact>
            <unpack>false</unpack>
            <scope>runtime</scope>
            <useTransitiveFiltering>true</useTransitiveFiltering>
            <includes>
                <include>org.apache.felix:org.apache.felix.framework</include>
                <include>org.slf4j:slf4j-api</include>
                <include>ch.qos.logback:*</include>
                <include>com.enioka.jqm:jqm-cli-bootstrap</include>
            </includes>
        </dependencySet>
        <dependencySet>
            <outputDirectory>bundle/level1</outputDirectory>
            <useProjectArtifact>false</useProjectArtifact>
            <unpack>false</unpack>
            <scope>runtime</scope>
            <useTransitiveFiltering>true</useTransitiveFiltering>
            <excludes>
                <exclude>org.apache.felix:org.apache.felix.framework</exclude>
                <exclude>org.slf4j:slf4j-api</exclude>
                <exclude>ch.qos.logback:*</exclude>
                <exclude>com.enioka.jqm:jqm-cli-bootstrap</exclude>
            </excludes>
        </dependencySet>
        <dependencySet>
            <outputDirectory>bundle</outputDirectory>
            <useProjectArtifact>false</useProjectArtifact>
            <unpack>false</unpack>
            <scope>provided</scope>
            <useTransitiveFiltering>true</useTransitiveFiltering>
            <excludes>
                <exclude>org.hsqldb</exclude>
                <exclude>org.apache.tomcat</exclude>
                <exclude>com.sun.mail</exclude>
                <exclude>org.osgi:osgi.*</exclude>                <!-- OSGi APIs are actually provided by the framework -->
                <exclude>org.osgi:org.osgi.service.c*</exclude>
                <exclude>junit:junit</exclude>
                <exclude>org.glassfish.jaxb:jaxb-runtime</exclude>                <!-- WHY OH WHY CXF WHITEBOARD???? -->
                <exclude>com.enioka.jqm:jqm-providers</exclude>
                <exclude>org.apache.shiro:shiro-cache</exclude>
                <exclude>org.apache.shiro:shiro-crypto-cipher</exclude>                <!-- We prefer using the "all in one" bundles coming from jqm-web-->
                <exclude>org.apache.shiro:shiro-config-core</exclude>
                <exclude>org.apache.shiro:shiro-config-ogdl</exclude>
                <exclude>org.apache.shiro:shiro-crypto-hash</exclude>
                <exclude>org.apache.shiro:shiro-lang</exclude>
                <exclude>org.apache.shiro:shiro-crypto-core</exclude>
            </excludes>
        </dependencySet>
        <dependencySet>
            <outputDirectory>jobs/jqm-demo/${artifact.artifactId}</outputDirectory>
            <useProjectArtifact>false</useProjectArtifact>
            <unpack>false</unpack>
            <outputFileNameMapping>${artifact.artifactId}.${artifact.extension}</outputFileNameMapping>
            <scope>test</scope>
            <includes>
                <include>com.enioka.jqm:jqm-test-pyl:jar</include>
                <include>com.enioka.jqm:jqm-test-pyl-nodep:jar</include>
            </includes>
        </dependencySet>
        <dependencySet>
            <outputDirectory>ext</outputDirectory>
            <useProjectArtifact>false</useProjectArtifact>
            <unpack>false</unpack>
            <scope>provided</scope>
            <includes>
                <include>org.hsqldb:hsqldb</include>
                <include>org.apache.tomcat:tomcat-jdbc</include>
                <include>org.apache.tomcat:tomcat-juli</include>
                <include>com.enioka.jqm:jqm-providers</include>
                <include>com.enioka.jqm:jqm-api</include>
                <include>com.sun.mail:javax.mail</include>
                <include>com.sun.activation:jakarta.activation</include>
                <include>com.sun.mail:smtp</include>
            </includes>
        </dependencySet>
    </dependencySets>
</assembly>
