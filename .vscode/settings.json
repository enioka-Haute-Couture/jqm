{
    "files.associations": {
        "Dockerfile.*": "dockerfile"
    },
    "LineCount.includes": [
        "**/*.java",
        "**/*.js",
        "**/*.html",
    ],
    "LineCount.excludes": [
        "**/.vscode/**",
        "**/node_modules/**",
        "**/jqm-tests/**",
        "**/target/**"
    ],
    "LineCount.output": {
        "txt": true,
        "json": true,
        "csv": false,
        "md": false,
        "outdir": "jqm-all/jqm-service/target/count/"
    },
    "editor.formatOnSave": true,
    "java.format.settings.url": "./jqm-all/jqm-doc/src/site/sphinx/files/format_eclipse_modified_java.xml",
    "java.configuration.updateBuildConfiguration": "automatic",
    "java.import.exclusions": [
        "**/.*",
        "**/node_modules/**",
        "**/.metadata/**",
        "**/archetype-resources/**",
        "**/META-INF/maven/**",
        "**/target/",
        "**/web/dist/"
    ],
    "java.autobuild.enabled": true,
    "maven.excludedFolders": [
        "**/.*", // exclude hidden folders
        "**/node_modules", // exclude node modules to speed up
        "**/target" // exclude duplicated pom file in target folder
    ],
    "files.exclude": {
        "**/.git": true,
        "**/.DS_Store": true,
        "**/node_modules/": true,
        "**/target/": true,
        "**/.classpath": true,
        "**/.project": true,
        "**/.settings/": true,
    }
}